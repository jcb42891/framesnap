<Window x:Class="FrameSnap.Shell.CustomCaptureSizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Capture Size"
        Width="360"
        Height="230"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Choose capture sizing mode and values."
                   Foreground="#FF38414D" />

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <RadioButton x:Name="RatioModeRadioButton"
                         Content="Ratio Mode"
                         Margin="0,0,16,0"
                         Checked="OnModeChanged" />
            <RadioButton x:Name="PixelModeRadioButton"
                         Content="Pixel Mode"
                         Checked="OnModeChanged" />
        </StackPanel>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="Width:" />
            <TextBox x:Name="WidthTextBox"
                     Grid.Column="2"
                     Height="28"
                     VerticalContentAlignment="Center" />

            <TextBlock Grid.Column="4"
                       VerticalAlignment="Center"
                       Text="Height:" />
            <TextBox x:Name="HeightTextBox"
                     Grid.Column="6"
                     Height="28"
                     VerticalContentAlignment="Center" />
        </Grid>

        <TextBlock x:Name="ValidationText"
                   Grid.Row="5"
                   Margin="0,12,0,0"
                   Foreground="#FFB42318"
                   Visibility="Collapsed" />

        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="84"
                    Margin="0,0,8,0"
                    IsCancel="True" />
            <Button Content="OK"
                    Width="84"
                    IsDefault="True"
                    Click="OnOkClicked" />
        </StackPanel>
    </Grid>
</Window>
